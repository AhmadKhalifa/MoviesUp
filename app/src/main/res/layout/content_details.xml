<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mal.mymovieapp.Activities.Details"
    tools:showIn="@layout/activity_details"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#008b1c"
        android:id="@+id/inner_image"
        android:orientation="vertical"
        android:layout_weight="35"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">
            <ImageButton
                android:id="@+id/back"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:background="#00ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">
            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aa000000"
                android:text="Movie name"
                android:textSize="30dp"
                android:textColor="#fff"
                android:paddingLeft="25dp" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="50">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myImage"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_margin="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:text="2013"
                android:textSize="35sp"
                android:gravity="center"/>
            <RatingBar
                android:paddingTop="10dp"
                android:progressTint="#cc6306"
                android:secondaryProgressTint="#bbb"
                android:progressBackgroundTint="#bbb"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="12"
                style="?android:attr/ratingBarStyleIndicator"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true" />
            <TextView
                android:id="@+id/voters"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:text="Voters: "
                android:layout_height="0dp"
                android:layout_weight="12"
                android:gravity="center"/>
            <Button
                android:id="@+id/add_to_favourite_button"
                android:text="Add to favourites"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="#008b1c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overview"
                android:textSize="15dp"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
